{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ 生成活动文件",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-std=c++11",
                "-O0",
                "-pthread",
                "Acceptor.cpp", 
                "Buffer.cpp", 
                "Channel.cpp", 
                "Connection.cpp", 
	            "Epoller.cpp", 
                "EventLoop.cpp", 
                "Server.cpp", 
                "TcpServer.cpp",
                "sql_connection_pool.cpp",
                "thread.cpp", 
                "eventloopthread.cpp", 
                "eventloopthreadpool.cpp",
                "log.cpp",
                "timer.cpp", 
                "timerqueue.cpp",
                "main.cpp",
                "HeaderDeal.cpp",
                "-o",
                "${fileDirname}/tcpserver",
                "-lmysqlclient"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}